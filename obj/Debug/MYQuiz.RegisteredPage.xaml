<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="MYQuiz.RegisteredPage"
	Title="RegisteredPage">
	<ContentPage.Content>
		<StackLayout BackgroundColor="Aqua" Margin="10,30,10,20"
			Padding="10">
			<!--the layout part and the backgroundcolor control -->
		<Label x:Name="Lbl_Username" Text="Username" TextColor="Blue">
		</Label>
			<!--tell user the are use to type in username -->
		<Entry x:Name="Entry_Username" Placeholder="Username">
		</Entry>
		<Label x:Name="Lbl_Password" Text="Password" TextColor="Blue">
		</Label>
			<!--tell user the are use to type in username -->
		<Entry x:Name="Entry_Password" Placeholder="Password">

		</Entry>
			<!--the area type username -->


		<Button x:Name="Btn_login"
				Text="login" 
				BackgroundColor="Lime"
				Clicked="Handle_Clicked">
		</Button>
			<!--if registered successful go to start page -->
		<Button x:Name="Btn_Registered"
				Text="Registered" 
				BackgroundColor="Lime"
				Clicked="Handle_Clicked2">
		</Button>
			<!--the button for registered -->

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
