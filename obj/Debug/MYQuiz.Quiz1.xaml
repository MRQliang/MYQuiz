			BackgroundColor="Olive" Clicked="Handle_Clicked"> 

	</Button>	
	<!--Button for answer true and clicked event-->
		<Button Text="false" 
			BackgroundColor="Olive" Clicked="Handle_Clicked2"> 
	</Button>
			<Label Text="{Binding Quiz1.xaml.m1}"></Label>
		<!--Button for answer false and clicked event-->	


		</StackLayout>
	</ContentPage.Content>
