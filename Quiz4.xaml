<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="MYQuiz.Quiz4"
	Title="Quiz4"
	BackgroundColor="Aqua">
	<ContentPage.Content>
		<StackLayout HorizontalOptions="Center" VerticalOptions="Center">
		<!--the layout part and the backgroundcolor control-->
			<Label FontSize="25" Text="Which city is the capital and most populous city of the Australian state of Victoria?"
				TextColor="Green">
			</Label>
			<!--the fourth question of the quiz-->
			<Label FontSize="12" Text="5 mark" TextColor="Navy"></Label>
			<!--show the mark of this question -->
			<Entry BackgroundColor="White">
			</Entry>
			<!--the area use to typein answer-->
			<Button Text="Save" TextColor="Black" BackgroundColor="Teal">
			</Button>
			<!--Save the answer and chick is true or false-->
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
